<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGRI PREDICTOR"
            android:gravity="center"
            android:textSize="45dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="80px"
            android:layout_marginTop="60dp"

            />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="232dp"
            android:src="@drawable/pngegg"
            android:layout_marginBottom="80dp"

            />


        <Button
            android:id="@+id/goFertilizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:layout_marginBottom="50px"
            android:padding="30dp"
            android:text="Fertilizer" />

        <Button
            android:id="@+id/goPesticide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:layout_marginBottom="50px"
            android:padding="30dp"
            android:text="Pesticide" />

        <Button
            android:id="@+id/goCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:padding="30dp"
            android:text="Crop Prediction" />

<!--        <Button-->
<!--            android:id="@+id/goFire"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="40dp"-->
<!--            android:padding="30dp"-->
<!--            android:text="Data Collection Testing" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>